<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="7000"
        android:entries="@array/pref_delay_reading_titles"
        android:entryValues="@array/pref_delay_reading_values"
        android:key="delay_for_reading"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_delay_time_reading" />
    
     <ListPreference
        android:defaultValue="4000"
        android:entries="@array/pref_delay_notifications_titles"
        android:entryValues="@array/pref_delay_notifications_values"
        android:key="delay_for_notifications"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_delay_time_notifications" />
     
     <CheckBoxPreference
 
    		android:key="voice_recognition"
 
    		android:title="@string/pref_title_voice_recognition"
 
   			android:summary="Habilita/Deshabilita el reconocimiento de voz"
 
   			android:defaultValue="false"/>

    <!--
         This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines.
